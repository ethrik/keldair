use strict;
use warnings;
use FindBin qw($Bin);
use lib "$Bin/lib";

BEGIN
{
	fork and exit;
	local $0 = 'keldair';
}

use Keldair;
use Keldair::Module::Sample;

my $sock = $keldair->connect();

while(my $buffer = <$sock>)
{
	print "R: $buffer" if $keldair->debug;
	chomp $buffer;
	chop $buffer;
	$keldair->parse($buffer);
}

close $sock;
