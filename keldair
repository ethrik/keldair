#!/usr/bin/env perl
# Copyright 2011 Ethrik Project, et al.
# Licensed under the 3-clause BSD.
use strict;
use warnings;
use FindBin qw($Bin);
use lib "$Bin/lib";
my $pid = $$;
BEGIN
{
	if(!-e "$Bin/etc/keldair.conf")
	{
		die "Could not find etc/keldair.conf\n";
	}
	fork and exit;
	local $0 = 'keldair';
	open PID, '>keldair.pid';
	print PID $$;
	close PID;
}

use Keldair;
use Keldair::Module::Help;

my $sock = $keldair->connect();

while(my $buffer = <$sock>)
{
	print "R: $buffer" if $keldair->debug;
	chomp $buffer;
	chop $buffer;
	$keldair->parse($buffer);
}

close $sock;

# Kill the first PID we had
$SIG{CHLD} = sub {
	print "CHLD - KILLING $pid\n";
	kill(TERM => $pid);
};

$SIG{TERM} = sub {
	$keldair->raw('QUIT :Caught SIGTERM, exiting.');
	die "SIGTERM - Exiting\n";
};

$SIG{INT} = sub {
	$keldair->raw('QUIT :Caught SIGINT, exiting.');
	die "SIGINT - Exiting\n";
};

END
{
	unlink 'keldair.pid';
}
